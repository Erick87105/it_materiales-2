<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_wizard_report_form" model="ir.ui.view">
            <field name="name">materiales.wizard.form</field>
            <field name="model">it_materiales.reportes_wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte">
                    <!-- Campo individual en la parte superior -->
                    
                    <group string='Rango por Fecha'>
                        <group col="4">
                            <field name="fecha_desde"/>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>

                    <footer>
                        <button name="generar_Reporte" type="object" string="Generar Reporte" class="oe_highlight"/>
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>